#include <stdarg.h>

int printf(char *format) {
  int total = 0;
  va_list args;
  
  va_start(args, format);
  
  for(char* i = format; 0 != i; ++i) {
    while('%' != *i)
    {
      terminal_writechar(*(i++));
      ++total;
    }

    ++i;
    ++total;

    switch(*i) {
      case 'd':
        terminal_writedec(va_arg(args, int));
        break;

      case 'X':
        terminal_writehex(va_arg(args, int));
        break;

      case 'c':
        terminal_writechar(va_arg(args, unsigned char));
        break;

      case 'S':
        terminal_writestring(va_arg(args, char *));
        break;
    
      default:
        terminal_writechar(*(i-1));
        terminal_writechar(*i);
        break;
    }
  }
  va_end(args);
  return total;
}
